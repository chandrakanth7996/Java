
class HelloWorld {
    public static void main(String[] args) {
        int n = 5;
         for(int i=1;i<n;i++){
             for(int k=0;k<2*(n-i-1);k++){
                 System.out.print(" ");
             }
             for(int j=i;j>0;j--){
                 System.out.print(j+" ");
             }
             System.out.println();
         }
    }
}

//output:
      1 
    2 1 
  3 2 1 
4 3 2 1 

