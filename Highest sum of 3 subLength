// Highest sum of 3 sublength of the array

import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int[] arr = {5,9,1,8,7};
        int n = arr.length;
        int sl = 3;
        int sum = 0;
        for(int i=0;i<=n-sl;i++){
            int j=i+sl-1;
            int temp=0;
            for(int k=i;k<=j;k++){
                temp+=arr[k];
            }
            sum = Math.max(sum,temp);
        }
        System.out.println(sum);
    }
}

// output : 18
